<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.root.bluesms.home">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="197dp"
            android:layout_height="130dp"
            android:text="BlueSms"
            android:id="@+id/Title"
            android:layout_gravity="center_horizontal|top"
            android:autoText="false"
            android:enabled="true"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="@string/title_activity_home"
            android:height="@dimen/abc_text_size_title_material_toolbar"
            android:textSize="50px"
            android:textStyle="normal|bold|italic" />

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/frameLayout"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="UUID : null"
            android:id="@+id/txt_uuid"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout">

        <Button
            android:layout_width="166dp"
            android:layout_height="92dp"
            android:text="Lancer"
            android:id="@+id/run"
            android:layout_gravity="center_vertical"
            android:width="100dp"
            android:layout_marginRight="5px" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:text="debug"
            android:id="@+id/debug"
            android:width="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5px" />

    </LinearLayout>

</RelativeLayout>
